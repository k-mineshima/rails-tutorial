<h1>All Posts</h1>
<div class="new-post">
  <%= link_to("New Post", new_posts_path) %>
</div>
<div>
  <% @posts.each do |post| %>
    <div class="post">
      <div class="nickname">
        <%= post.nick_name %>
      </div>
      <div class="content">
        <%= post.content %>
      </div>
      <p>------------------------------------</p>
    </div>
  <% end %>
</div>
