<h1>Post Edit</h1>
<%= form_with model: @post do |f| %>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, value: @post.content, autofocus: true, autocomplete: "今日は楽しかったね" %>
  </div>
  <%= alert %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
